{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "exclude": ["node_modules", "gen", "migration"]
}
