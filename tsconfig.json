{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "gen"]
}
