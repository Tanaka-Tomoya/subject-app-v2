{
  "name": "subject-simulator",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Tanaka-Tomoya/subject-app-v2.git",
  "author": "Tanaka-Tomoya <tomoya2627@gmail.com>",
  "license": "MIT",
  "engines": {
    "yarn": "1.x"
  },
  "scripts": {
    "init:all": "yarn && run-s init:client init:server",
    "init:root": "yarn install",
    "init:client": "cd client && yarn install --no-cache",
    "init:server": "cd server && yarn install --no-cache",
    "dev": "yarn dev:codegen && run-p dev:client dev:server",
    "dev:client": "cd client && yarn dev",
    "dev:server": "cd server && yarn dev",
    "dev:codegen": "graphql-codegen --config codegen.yml",
    "dev:codegen:watch": "graphql-codegen --config codegen.yml -w",
    "server": "cd server && yarn start",
    "build": "cd server && yarn build & cd client && yarn build",
    "start": "NODE_ENV=production yarn server"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.12.2",
    "@graphql-codegen/introspection": "^1.8.1",
    "@graphql-codegen/typescript": "1.8.1",
    "@graphql-codegen/typescript-document-nodes": "1.8.1",
    "@graphql-codegen/typescript-operations": "^1.8.3",
    "@graphql-codegen/typescript-react-apollo": "^1.8.3",
    "@graphql-codegen/typescript-resolvers": "^1.8.1",
    "@types/eslint": "^6.1.2",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/node": "^12.12.5",
    "@types/prettier": "^1.18.3",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^4.4.0",
    "@types/webpack": "^4.39.8",
    "@types/webpack-dev-server": "^3.4.0",
    "@types/webpack-node-externals": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prefer-arrow": "^1.1.6",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "graphql": "^14.6.0",
    "graphql-toolkit": "^0.6.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
