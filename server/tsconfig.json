{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "db": ["src/types/db"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": ["src", "src/types"]
}
